@model List<Shipwrecks>
@{
    ViewData["Title"] = "Home Page";
}
<a href="#" class="btn btn-outline-primary">Kayıt Ekle</a>
<br />
<hr />

<div class="text-center table table-bordered">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Feature Type</th>
                <th scope="col">Latitude</th>
                <th scope="col">Longitude</th>
                <th scope="col">Watlev</th>
                <th width="20%">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FeatureType</td>
                    <td>@item.Latitude</td>
                    <td>@item.Longitude</td>
                    <td>@item.Watlev</td>
                    <td>
                        <a asp-action="UpdateRecord" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-info btn-xs">Düzenle</a> &nbsp;
                        <a asp-action="DeleteById" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger btn-xs">Sil</a>

                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
